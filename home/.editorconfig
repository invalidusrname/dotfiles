root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,py,rb}]

[*.jsx]
indent_size = 2

[*.js]
indent_size = 2

[*.py]
indent_size = 4

[*.rb]
indent_size = 2

[*.json]
indent_size = 2

[Makefile]
indent_style = tab
