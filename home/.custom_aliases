# bundler
alias b="bundle"
alias bi="b install --path vendor"
alias bil="bi --local"
alias bu="b update"
alias be="b exec"
alias binit="bi && b package && echo 'vendor/ruby' >> .gitignore"


alias uruby="asdf plugin update ruby; echo 'TO INSTALL: asdf install ruby X.X.X'"

